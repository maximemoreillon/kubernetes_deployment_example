<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Containerized application</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="wrapper">
      <div class="title">Example containerized application</div>

      <table>
        <tr>
          <td>Version</td>
          <td>1.1.3</td>
        </tr>
        <tr>
          <td>Hostname</td>
          <td><%= hostname %></td>
        </tr>
        <%
        for(var networkInterface in networkInterfaces()){
          if(networkInterface === "eth0"){
        %>
        <tr>
          <td><%= networkInterface %> IP</td>
          <td><%= networkInterfaces()[networkInterface][0].address %></td>
        </tr>
        <%
          }
        }
        %>

      </table>
    </div>



  </body>
</html>
